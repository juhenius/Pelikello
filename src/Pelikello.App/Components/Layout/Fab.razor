@using Pelikello.App.Components.Pages.Games

<button
  class="fixed bottom-20 right-8 bg-blue-600 text-white rounded-full w-16 h-16 flex items-center justify-center shadow-lg text-3xl hover:bg-blue-700 z-50"
  @onclick="AddGame">
  +
</button>

@if (open)
{
  <AddGameModal OnClose="() => open = false" />
}

@code {
  private bool open = false;

  private void AddGame()
  {
    open = true;
  }
}
